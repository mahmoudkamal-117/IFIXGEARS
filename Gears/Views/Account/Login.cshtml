@model Gears.ViewModels.LoginViewModel
@{ 
    Layout = "_Login";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login" method="post" role="form">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="@Model.UserName">UserName</label>
                            <input class="form-control py-4"asp-for="@Model.UserName" id="inputEmailAddress"  placeholder="Enter email address" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" asp-for="@Model.Password">Password</label>
                                <input class="form-control py-4" asp-for="@Model.Password" id="inputPassword" type="password" placeholder="Enter password" />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group fa-pull-right">
                                <div class="col-md-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Log in" />
                                </div>
                            </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</main>