@model Gears.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- start slider-->
<div class="header">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators d-none ">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="overlay"></div>

            <div class="carousel-item  active">
                <img src="~/image/@Model.HomeContent.Image" class="d-block w-100" alt="...">
                <div class="carousel-caption  d-md-block">
                    <h5>اهلا بكم فى </h5>
                    <h2 class="h1">I FIX <span class="last-word">GEARS</span></h2>
                    <p>@Model.HomeContent.Paragraph </p>
                    <div class="button-parent">
                        <a href="#" class="btn one three" id="show-video">   <i class="fas fa-play   text-center fa-2x"></i></a>
                    </div>
                </div>
            </div>
            @foreach (var img in Model.HomeSlider)
            {
                <div class="carousel-item">
                    <img src="~/image/@img.Image" class="d-block w-100" alt="...">
                    <div class="carousel-caption  d-md-block">
                        <h5>اهلا بكم فى </h5>
                        <h2 class="h1">I FIX <span class="last-word">GEARS</span></h2>
                        <p>@Model.HomeContent.Paragraph </p>
                        <div class="button-parent">
                            <a href="#" class="btn one three" id="show-video">   <i class="fas fa-play   text-center fa-2x"></i></a>
                        </div>
                    </div>
                </div>
            }


        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>


<!-------------
    end header
 -------------->
<!-------------
    start about us
 -------------->

<section class="about-us" id="about-us">
    <div class="container">


        <div class="about-content">
            <div class="row">
                <div class="col-md-4 text-center ">
                    <h2 class="section-header ">مـن نـحـن </h2>
                </div>
                <div class="col-md-8  ">
                    <p class="paragraph   ">
                        @Model.AboutUs.Paragraph
                    </p>
                </div>
            </div>
        </div>
        <div class="margin"></div>
        <div class="about-items">
            <div class="row">
                @foreach (var icon in Model.AboutWork)
                {
                    <div class="col-lg-4 col-md-6 nopadding">
                        <div class="about-us-content text-center">
                            <span class="icon"><i class="@icon.Icon"></i></span>
                            <h5 class="header-item"> @icon.Header </h5>
                            <p class="paragraph">  @icon.Paragraph </p>
                        </div>
                    </div>
                }



            </div>
        </div>

    </div>
</section>

<!-------------
    end  about us
 -------------->
<!--
  ~~~~~~~ start our work ~~~~~~~
-->

<section class="our-work " id="our-work">
    <div class="container-fluid">
        <div class="content text-center">
            <h3 class="section-header">أهـم اعمـالنـا </h3>
        </div>
        <div class="row">
            @foreach (var check in Model.OurWork)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="content-twentey">
                        <div class="tewntytewnty-contianer">
                            <img src="~/image/@check.Before" alt="">
                            <img src="~/image/@check.After" alt="">
                        </div>
                    </div>

                </div>
            }


         
        </div>
    </div>
</section>

<!--
     ~~~~~~~ end  our work ~~~~~~~
-->

<section class="section video" id="see-us">
    <div class="overlay"></div>
    <div class="container">
        <div class=" text-center">
            <h3 class="section-header">شـاهـدنـا </h3>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="content-video">
                    <div class="image-video">
                        <div class="img"></div>
                        <!--<img class="w-100"src="image/bg4.jpg" alt>-->
                    </div>
                    <div class="video-icon" id="video-icon">
                        <i class="fas fa-play   text-center"></i>

                    </div>
                    <div class="exit " id="exit">
                        <i class="fas fa-times"></i>
                    </div>



                    <iframe class="video-thumbnail " src="https://www.youtube.com/embed/9qVNFqCvhU8" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-md-6">
                <div class="video-data">
                    <h3>@Model.VideoContent.Header </h3>
                    <p class="text-justify"> @Model.VideoContent.Paragraph </p>
                    <a href="https://www.youtube.com/channel/UC3xbtrMeQXx-_Yqsit4gIIw" target="blank" class="btn one">للمزيد من الفديوهات </a>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- start  reviews
---------------------------->

<section class="reviews section " id="reviews">

    <div class="content text-center">
        <h3 class="section-header">أراء العملاء </h3>
    </div>



    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="container">
                <div class="carousel-item active">
                    <div class="row">

                        @foreach (var review in Model.CustomerOpinion)
                        {
                            <div class="col-lg-3 col-md-6 ">
                                <div class="content-items text-center">
                                    <div class="image">
                                        <img class="w-100" src="image/tools.png " alt="">
                                    </div>
                                    <h5> @review.Name </h5>
                                    <p> @review.Description</p>
                                </div>
                            </div>
                        }

                    

                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"><i class="fas fa-arrow-left"></i></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</section>



