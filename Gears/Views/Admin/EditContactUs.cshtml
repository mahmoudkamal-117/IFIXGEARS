@model Gears.Models.ContactUs
@{
    Layout = "_AdminLayout";
}
<div>
    <h2>Edit</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditContactUs">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Address" class="control-label"></label>
                    <input asp-for="@Model.Address" class="form-control" />
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone" class="control-label"></label>
                    <input asp-for="@Model.Phone" class="form-control" />
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">MassengerUrl</label>
                    <input asp-for="@Model.Url" class="form-control" />
                    <span asp-validation-for="@Model.Url" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Gmail" class="control-label"></label>
                    <input asp-for="@Model.Gmail" class="form-control" />
                    <span asp-validation-for="@Model.Gmail" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="ContactUsIndex" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>
