@model IEnumerable<Gears.Models.HomeSlider>
@{
    Layout = "_AdminLayout";
}


    <div class="container">
        <a asp-action="CreateHomeSlider"  class="btn btn-primary">Add</a>
        <div class="row">
            @foreach (var item in Model)
            {
                <div>
                    <img src="~/image/@item.Image" style="width:300px;height:300px;" />
                    <div>
                        <a asp-action="EditHomeSlider" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                        <a asp-action="DeleteHomeSlider" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }

        </div>
    </div>