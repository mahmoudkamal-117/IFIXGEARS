@model Gears.ViewModels.EditHomeContentViewModel
@{
    Layout = "_AdminLayout";
}
<div>
    <h2>Edit</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditHomeContent" enctype="multipart/form-data">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Paragraph" class="control-label"></label>
                    <input asp-for="@Model.Paragraph" class="form-control" />
                    <span asp-validation-for="@Model.Paragraph" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="@Model.Image" class="control-label"></label>

                    <input type="file" asp-for="@Model.File" />
                    <span asp-validation-for="@Model.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Image" />
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="HomeContentIndex" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>
