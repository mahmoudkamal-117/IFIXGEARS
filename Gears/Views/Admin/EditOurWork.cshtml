@model Gears.ViewModels.OurWorkViewModel
@{
    Layout = "_AdminLayout";
}


<div>
    <h2>Edit Work</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdateOurWork" enctype="multipart/form-data">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Before" class="control-label"></label>

                    <input type="file" asp-for="@Model.UploadBefore" />
                    <span asp-validation-for="@Model.Before" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.After" class="control-label"></label>

                    <input type="file" asp-for="@Model.UploadAfter" />
                    <span asp-validation-for="@Model.After" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Before" />
                    <input type="hidden" asp-for="@Model.After" />
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="OurWorkIndex">Back to List</a>
    </div>
</div>