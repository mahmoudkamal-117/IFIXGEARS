@model Gears.ViewModels.HomeSliderViewModel
@{
    Layout = "_AdminLayout";
}


<div>
    <h2>Create Slider</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateHomeSlider" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                              
                <div class="form-group">
                    <label asp-for="@Model.Image" class="control-label"></label>
                    <input type="file" asp-for="@Model.Upload" class="form-control" />
                    <span asp-validation-for="@Model.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="HomeSliderIndex">Back to List</a>
    </div>
</div>